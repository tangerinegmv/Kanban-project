@model Kanban.ViewModels.CrearUsuarioViewModel

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="text-center">
    <h1 class="display-4">Crear Usuario</h1>
</div>

<form asp-controller="Usuario" asp-action="CrearUsuario" method="post">
  <div class="mb-3">
    <section>
    <label asp-for="NombreDeUsuario" class="form-label">Nombre de Usuario</label>
    <input asp-for="NombreDeUsuario" type="text" class="form-control">
    <span asp-validation-for="NombreDeUsuario" class="text-danger"></span>
    </section>

    <section>
    <label asp-for="RolUsuario" class="form-label">Rol de Usuario</label>
    <select asp-for="RolUsuario" class="form-select">
        <option value="0">Administrador</option>
        <option value="1">Operador</option>
    </select>
    <span asp-validation-for="RolUsuario" class="text-danger"></span>
    </section>

    <section>
    <label asp-for="Password" class="form-label">Contrase√±a</label>
    <input asp-for="Password" type="password" class="form-control">
    <span asp-validation-for="Password" class="text-danger"></span>
    </section>
  </div>    
  <button type="submit" class="btn btn-outline-success">Crear</button>
  <a asp-action="ListarUsuarios" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}