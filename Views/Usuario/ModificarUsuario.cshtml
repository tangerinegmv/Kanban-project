@{
    ViewData["Title"] = "ModificarUsuario";
}

@model Kanban.Usuario

<form asp-controller="Usuario" asp-action="ModificarUsuario">
  <div class="mb-3">
    <label asp-for=@Model.NombreDeUsuario class="form-label">Nombre de usuario</label>
    <input asp-for=@Model.NombreDeUsuario type="text" class="form-control">
    <label asp-for=@Model.RolUsuario class="form-label">Rol del usuario</label>
    <select asp-for=@Model.RolUsuario class="form-select">
        <option value="0">Administrador</option>
        <option value="1">Operador</option>
    </select>
  </div>    
  <button type="submit" class="btn btn-outline-success">Modificar</button>
</form>