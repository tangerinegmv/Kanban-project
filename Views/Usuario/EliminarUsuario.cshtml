@{
    ViewData["Title"] = "Eliminar Usuario";
}

@model Kanban.Usuario

<h1>Eliminar Usuario</h1>

<h3>¿Estás seguro de que deseas eliminar este usuario?</h3>
<div>
    <h4>@Model.NombreDeUsuario</h4>
    <p><strong>ID:</strong> @Model.Id</p>
    <p><strong>Rol:</strong> @Model.RolUsuario</p>
</div>

<form asp-action="EliminarUsuario" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>