
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}
@model List<Kanban.ViewModels.ListarTablerosViewModel>

@{
    ViewData["Title"] = "Tableros del Usuario";
}

<h1>Tableros del Usuario</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripci√≥n</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tablero in Model)
        {
            <tr>
                <td>@tablero.Nombre</td>
                <td>@tablero.Descripcion</td>
                <td>
                    <a asp-controller="Tablero" asp-action="ModificarTablero" asp-route-id="@tablero.Id" class="btn btn-primary">Modificar</a>
                    <a asp-controller="Tablero" asp-action="EliminarTablero" asp-route-id="@tablero.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
        
    </tbody>
</table>
<div class="text-center">
    <a asp-controller="Usuario" asp-action="ListarUsuarios" class="btn btn-secondary">Volver a Usuarios</a>
</div>